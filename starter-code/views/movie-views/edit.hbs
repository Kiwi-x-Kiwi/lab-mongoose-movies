<h2>Edit Movie Info</h2>

<form action="/movies/{{movie._id}}" method="POST">
  <label>Title: </label>
  <input type="text" name="title" value = "{{movie.title}}">

  <label>Genre: </label>
  <input type="text" name="genre" value = "{{movie.genre}}">

  <label>Plot: </label>
  <input type="text" name="plot" value = "{{movie.plot}}">

  <label>Main Cast: </label>
  <select name="celebs">
    <option value="{{movie.celebs}}">No Change</option>
    {{#each celebs}}
    <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
  </select>

  <button type="submit">Update Movie</button>
</form>